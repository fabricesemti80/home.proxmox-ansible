auto vmbr0
iface vmbr0 inet static
    address 10.0.40.{{ ansible_host.split('.')[-1] }}/24
    gateway 10.0.40.1
    bridge-ports enp2s0
    bridge-stp off
    bridge-fd 0

iface wlp3s0 inet manual

source /etc/network/interfaces.d/*
