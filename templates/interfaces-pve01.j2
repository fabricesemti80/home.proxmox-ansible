auto lo
iface lo inet loopback

iface enp2s0 inet manual

# USB Network Configuration - Host-specific configuration
{% if inventory_hostname == 'pve-0.fabricesemti.dev' %}
auto enx7cc2c64ca36f
iface enx7cc2c64ca36f inet static
    address 10.0.70.10/24
{% elif inventory_hostname == 'pve-1.fabricesemti.dev' %}
auto enx7cc2c64b6389
iface enx7cc2c64b6389 inet static
    address 10.0.70.11/24
{% elif inventory_hostname == 'pve-2.fabricesemti.dev' %}
auto enx7cc2c64b4dc4
iface enx7cc2c64b4dc4 inet static
    address 10.0.70.12/24
{% endif %}

# The eth0 interface might be conflicting with the USB interface
# Commenting out for now
#auto eth0
#iface eth0 inet static
